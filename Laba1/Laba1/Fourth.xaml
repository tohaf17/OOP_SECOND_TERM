<Window x:Class="Laba1.Fourth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Laba1"
        mc:Ignorable="d"
        Title="Fourth" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Text="Вводьте послідовність виду 0 х,\n1 х або 2 х (де х - число) \ 0 -- sqrt(abs(x)) \ 1 -- x^3 \ 2 -- x + 3,5"
            TextAlignment="Center" Background="Aqua" Width="600px" Height="50" Margin="0,0,0,20"
                       />
            <TextBox Name="input" Width="200px" Height="30" Margin="0,0,0,20"></TextBox>
            <Button Content="Button" Width="100" Margin="0,0,0,20" Click="ButtonBase_OnClick"></Button>
            <TextBox Name="output" Width="200px" Height="30"></TextBox>
        </StackPanel>

    </Grid>
</Window>
