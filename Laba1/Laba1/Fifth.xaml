<Window x:Class="Laba1.Fifth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Laba1"
        mc:Ignorable="d"
        Title="Fifth" Height="450" Width="800" >
        <StackPanel HorizontalAlignment="Center" Margin="0,100,0,0">
                <UniformGrid Columns="3" Height="40" Margin="0,0,0,10">
                        <Button Content="Transperency" Width="100" Height="30" Margin="0,0,20,0" Click="trans_click"/>
                        <Button Content="Background color" Width="100" Height="30" Click="back_click"/>
                        <Button Content="Hello Julia" Width="100" Height="30" Click="hello_click"/>
                </UniformGrid>

                <Button Name="super" Content="Superbutton" Width="100" Height="30" 
                        HorizontalAlignment="Center" Click="super_click"/>
                <TextBlock Text="Choose the items for superbutton" Margin="0,10,0,0"/>

                <CheckBox Content="Transperency" Name="first" Margin="0,10,0,0"
                          Checked="checkbox_changed" Unchecked="checkbox_changed"/>

                <CheckBox Content="Background color" Name="second" Margin="0,10,0,0"
                          Checked="checkbox_changed" Unchecked="checkbox_changed"/>

                <CheckBox Content="Hello Julia" Name="third" Margin="0,10,0,0"
                          Checked="checkbox_changed" Unchecked="checkbox_changed"/>


                
        </StackPanel>


</Window>
