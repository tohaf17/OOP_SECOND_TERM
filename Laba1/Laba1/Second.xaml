<Window x:Class="Laba1.Second"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Laba1"
        mc:Ignorable="d"
        Title="Second" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <TextBox x:Name="input" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 VerticalAlignment="Stretch" 
                 HorizontalAlignment="Stretch" 
                 Margin="10"
                 Width="500"
                 Height="50"/>
        <TextBox x:Name="number_k" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 VerticalAlignment="Stretch" 
                 HorizontalAlignment="Stretch" 
                 Margin="10"
                 Width="50"
                 Height="20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Content="Show the new array. Method 1" Width="200" Height="30" Click="first_Click" Margin="0,0,10,0"/>
            <Button Content="Show the new array. Method 2" Width="200" Height="30" Click="second_Click"/>
        </StackPanel>
        <TextBox x:Name="output" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 VerticalAlignment="Stretch" 
                 HorizontalAlignment="Stretch" 
                 Margin="10"
                 Width="500"
                 Height="50"/>
    </StackPanel>
        
    
</Window>
