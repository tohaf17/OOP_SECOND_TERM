<Window x:Class="Laba_4.Concert_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Laba_4"
        mc:Ignorable="d"
        Title="Concert_Form" Height="450" Width="800">
        <Grid Margin="10">
                <StackPanel Orientation="Vertical" VerticalAlignment="Top">

                        <TextBlock Text="Organizer:" FontWeight="Bold"/>
                        <TextBox Text="{Binding Organizer, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <TextBlock Text="Date:" FontWeight="Bold"/>
                        <DatePicker SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                        <TextBlock Text="Performances:" FontWeight="Bold"></TextBlock>
                        <ListBox 
                                Name="list_performances"
                                ItemsSource="{Binding Performances}" 
                                DisplayMemberPath="Title"
                                Width="200" Height="200">
                                <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                                <EventSetter Event="MouseEnter" Handler="performance_mouse"></EventSetter>
                                        </Style>
                                </ListBox.ItemContainerStyle>
                        </ListBox>

                        <Button Content="Add performance" Width="100" HorizontalAlignment="Left" Margin="5" Command="{Binding AddPerformanceCommand}"></Button>
                        <Button Content="OK" Width="100" HorizontalAlignment="Left" Margin="5" Command="{Binding OkCommand}"/>

                </StackPanel>
        </Grid>
</Window>
