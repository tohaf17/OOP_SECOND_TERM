<Window x:Class="task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
        <Grid>
                <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"
                           Text="Ви задоволені своїм життям?" />
                <Canvas>
                        <Button Width="50" Height="50" Canvas.Left="100" Canvas.Top="200" 
                                Content="Так" Click="yes_method"/>
                        <Button MouseEnter="mouse_enter" Width="50" Height="50"
                                Canvas.Left="200" Canvas.Top="200" Content="Ні" />
                </Canvas>
        </Grid>
</Window>
